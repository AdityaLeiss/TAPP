<div class="card mb-3" style="max-width: 540px;">
  <div class="row no-gutters">
    <div class="col-md-4">
      <img src="../../javascript/image/cowo.jpg" class="card-img" alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">Profil Mahasiswa</h5>
        <% @s = Student.find(@zhilka)%>
        <% @b = Bimbingan.find_by(nim: @zhilka)%>
        <p class="card-text spacing"><%= @s.nama %></p>
        <p class="card-text spacing"><%= @s.nim %></p>
        <p class="card-text spacing"><%= @b.judul %></p>
      </div>
    </div>
  </div>
</div>