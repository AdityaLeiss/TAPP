<p id="notice"><%= notice %></p>

<h1>Bimbingans</h1>

<table>
  <thead>
    <tr>
      <th>Id Bimbingan</th>
      <th>NIM</th>
      <th>Nama</th>
      <th>Judul</th>
      <th>NIP</th>
      <th>Dosen</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bimbingans.each do |bimbingan| %>
      <tr>
        <td><%= bimbingan.idb %></td>
        <td><%= bimbingan.nim %></td>
        <td><%= Student.find(bimbingan.nim).nama %></td>
        <td><%= bimbingan.judul %></td>
        <td><%= bimbingan.nip%></td>
        <td><%= Dosen.find(bimbingan.nip).nama %></td>

        <td><%= link_to 'Show', bimbingan %></td>
        <td><%= link_to 'Edit', edit_bimbingan_path(bimbingan) %></td>
        <td><%= link_to 'Destroy', bimbingan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
